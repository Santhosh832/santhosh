 pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git branch: 'dev', url: 'https://github.com/vasavivodnala/devops-build.git'
            }
        }
        stage('Build Docker Image') {
            steps {
                sh './build.sh'
            }
        }
        stage('Push to Docker Hub') {
            steps {
                script {
                    if (env.BRANCH_NAME == 'dev') {
                        sh 'docker push vasavivodnala/dev:latest'
                    } else if (env.BRANCH_NAME == 'master') {
                        sh 'docker push vasavivodnala/prod:latest'
                    }
                }
            }
        }
 stage('Deploy') {
            steps {
                sh './deploy.sh'
            }
        }
    }
    triggers {
        pollSCM('H/5 * * * *') // Auto-build on changes
    }
}



